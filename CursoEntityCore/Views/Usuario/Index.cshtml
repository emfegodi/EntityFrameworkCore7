@model IEnumerable<CursoEntityCore.Models.Usuario>
@{
    ViewData["Title"] = "Lista de usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de usuarios</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear usuario</a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(a => a.Id)</th>
                <th>@Html.DisplayNameFor(a => a.NombreUsuario)</th>
                <th>@Html.DisplayNameFor(a => a.Email)</th>
                <th>@Html.DisplayNameFor(a => a.Direccion)</th>
            </tr>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.NombreUsuario</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Direccion</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@usuario.Id">Editar</a>
                        <a class="btn btn-secondary text-white" asp-action="Borrar" asp-route-id="@usuario.Id">Detalle</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@usuario.Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay usuarios</p>
    }
</div>