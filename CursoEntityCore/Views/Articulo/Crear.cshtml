@model CursoEntityCore.Models.Articulo
@{
    ViewData["Title"] = "Crear artículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Crear un nuevo artículo</h3>
<form method="post" asp-action="Crear">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">
            <div class="row">
                <div class="col-4">
                    <label asp-for="TituloArticulo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TituloArticulo" class="form-control" />
                    <span asp-validation-for="TituloArticulo" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <label asp-for="Descripcion"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <label asp-for="Fecha"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <label asp-for="Calificacion"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Calificacion" class="form-control" />
                    <span asp-validation-for="Calificacion" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <label asp-for="Categoria"></label>
                </div>
                <div class="col-8">
                    <select asp-for ="Categoria_Id" class="form-control">
                        <option value="1">Categoria 1</option>
                        <option value="1">Categoria 2</option>
                    </select>
                    @*<input asp-for="Categoria_Id" class="form-control" />*@
                    <span asp-validation-for="Categoria_Id" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-3">
            <a asp-action="Index">Volver a lista</a>
        </div>
        <div class="col-5 offset-4">
            <button type="submit" class="btn btn-primary form-control">Crear</button>
            &nbsp;
        </div>
    </div>
</form>

